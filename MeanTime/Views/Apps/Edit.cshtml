@model MeanTime.Models.App

@{
    ViewData["Title"] = "App Editor";
}


<div class="container-fluid px-1 py-5 mx-auto container">
    <div class="row d-flex justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
            <h1 class="headtag">Edit Mode</h1>
            <div class="card">
                <h5 class="text-center mb-4">App</h5>
                <form asp-action="Edit" enctype="multipart/form-data" class="form-card">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="AppId" />

                    <div class="row justify-content-between text-left mb-4">
                        <div class="form-group col-sm-6 flex-column d-flex">
                            <label asp-for="Name" class="form-control-label px-3"></label>
                            <input asp-for="Name" type="text" placeholder="App name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6 flex-column d-flex">
                            <label asp-for="Price" class="form-control-label px-3"></label>
                            <input asp-for="Price" type="text" placeholder="Price in $">
                            <span asp-validation-for="Price" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="row justify-content-between text-left mb-4">
                        <div class="form-group col-sm-6 flex-column d-flex">
                            <label asp-for="Size" class="form-control-label px-3">Size</label>
                            <input asp-for="Size" type="text" placeholder="Size in kb">
                            <span asp-validation-for="Size" class="text-danger"></span>

                        </div>

                        <div class="form-group col-sm-6 flex-column d-flex">
                            <label asp-for="Rating" class="form-control-label px-3"></label>
                            <input asp-for="Rating" type="number" value="3.5" data-decimals="1" min="0" max="5" step="0.5" />
                            <span asp-validation-for="Rating" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="row justify-content-between text-left mb-4">


                        <div class="form-group col-6 flex-column d-flex">
                            <label asp-for="Image" class="form-control-label px-3">Upload Image</label>
                            <input asp-for="Image" type="file" class="form-control">
                            <span asp-validation-for="Image" class="text-danger"></span>

                        </div>

                        <div class="form-group col-sm-6 flex-column d-flex">
                            <label asp-for="GenreId" class="form-control-label px-3 mb-1">Genre</label>
                            <select asp-for="GenreId" class="custom-select " asp-items="ViewBag.GenreId">
                            </select>
                        </div>
                    </div>

                    <div class="row justify-content-between text-left mb-4">
                        <div class="form-check form-switch ml-5">
                            <input asp-for="Status" class="form-check-input" type="checkbox">
                            <label asp-for="Status" class="form-check-label">Installed</label>

                        </div>
                    </div>
                    <div class="row justify-content-between text-left">
                        <div class="form-group col-12 flex-column d-flex">
                            <label asp-for="MetaTag" class="form-control-label px-3"></label>
                            <input asp-for="MetaTag" type="text" placeholder="Meta Tags for robots">
                            <span asp-validation-for="MetaTag" class="text-danger"></span>

                        </div>
                    </div>
                    @if (Model.Image != null)
                    {
                        @*<img src="~/img/@Model.Image" alt="App Image" class="thumb" />*@
                        <input id="OldImage" name="OldImage" value=@Model.Image type="hidden" />
                    }
                    <div class="row justify-content-end">

                        @*<div class="form-group col-sm-10 d-flex flex-row ">
                            <button class="btn-block btn-outline-danger mt-2 mr-2">
                                <a asp-action="Index" class="text-decoration-none cancel">Cancel</a>
                            </button>
                            <button type="submit" value="Create" class="btn-block btn-success">Save Changes</button>
                        </div>*@
                        <div class="form-group col-sm-6">
                            <button type="submit" value="Create" class="btn-block btn-primary">Save Changes</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
