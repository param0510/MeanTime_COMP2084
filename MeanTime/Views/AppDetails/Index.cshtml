@*This is not required but still I have not commented it out as it might required on a backend perspective to see the data rendered in a tabular format*@

@model IEnumerable<MeanTime.Models.AppDetail>

@{
    ViewData["Title"] = "App Profiles";
}

<h1>App Profiles</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.App)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalDataUsage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvgMemoryUsage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Downloads)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InstallDate)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.App.Name)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalDataUsage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvgMemoryUsage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Downloads)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InstallDate)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.AppId" class="btn btn-warning m-1">Edit</a>
                <a asp-controller="Apps" asp-action="Delete" asp-route-id="@item.AppId" class="btn btn-outline-danger m-1">Delete</a>
                <a asp-action="Details" asp-route-id="@item.AppId" class="btn btn-outline-info m-1">Preview</a>
            </td>
        </tr>
}
    </tbody>
</table>
